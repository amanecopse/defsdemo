<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextFilesFragmentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="최근 연 파일"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/textfilesListView"
        android:name="com.amnapp.defsdemo.TextfilesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".TextfilesFragment"
        tools:listitem="@layout/textfiles_items"></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

